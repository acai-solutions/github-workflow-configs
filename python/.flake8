[flake8]
# Line length to match Black's default
max-line-length = 88

# Extend the line length for lines with comments
max-doc-length = 88

# Exclude common directories
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    build,
    dist,
    *.egg-info,
    .tox,
    .pytest_cache,
    .mypy_cache,
    node_modules

# Ignore specific error codes
ignore = 
    # E203: whitespace before ':' (conflicts with Black)
    E203,
    # E402 module level import not at top of file
    E402,
    # W503: line break before binary operator (conflicts with Black)
    W503,
    # E501: line too long (if Black handles it)
    E501,
    # F401: imported but unused (sometimes intentional in __init__.py)
    # F401,
    # W505: doc line too long (112 > 88 characters) 
    W505,

# Per-file ignores
per-file-ignores =
    # Ignore import errors in __init__ files
    __init__.py:F401,F403
    # Ignore complexity in tests
    test_*.py:C901
    *_test.py:C901

# McCabe complexity threshold
max-complexity = 10